modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WildBot HFT Scalper"

[[workflows.workflow]]
name = "WildBot HFT Scalper"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "gunicorn --bind=0.0.0.0:${PORT:-5000} --workers=1 --threads=4 --timeout=120 --reuse-port main:app"]

[[ports]]
localPort = 5000
externalPort = 80
